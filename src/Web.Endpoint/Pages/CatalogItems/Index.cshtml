                        <div class="listing-items row">
                      @foreach (var catalogItem in Model.Response.Result.Data)
                      {
                <div class="col-lg-3 col-md-4 col-sm-6 px-0">
                    <div class="product-card">
                        <div class="product-card-top">
                            <a asp-page="Details" asp-route-id="@catalogItem.Id" class="product-image">
                                <img src="@catalogItem.Image" alt="@catalogItem.Name">
                            </a>
                            <div class="product-card-actions">
                                <button class="add-to-wishlist"><i class="fas fa-heart"></i></button>
                                <button class="add-to-compare"><i class="fas fa-random"></i></button>
                            </div>
                        </div>
                        <div class="product-card-middle">
                            <div class="ratings-container">
                                <div class="ratings">+
                                    <div class="ratings-val" style="width: @(catalogItem.Rate*20)%;"></div>
                                </div>
                            </div>
                            <h6 class="product-name">
                                <a href="#">
                                  @catalogItem.Name
                                </a>
                            </h6>
                            <div class="product-price product-price-clone">@(catalogItem.Price.ToString("n0")) تومان</div>
                        </div>
                        <div class="product-card-bottom">
